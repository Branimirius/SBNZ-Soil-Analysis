rule "Recommend NPK proportion"
	salience 1
    when
        $soil: Soil($kgn: kgN > 0, $kgp: kgP > 0, $kgk: kgK > 0)
        $list: ArrayList() from collect(
        	Fertilizer(abs(($kgp/$kgk) - (P/K)) < 0.2)
        )
    then
        $soil.setRecommendation($s.getRecommendation() + "");

end

